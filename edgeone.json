{
    "buildCommand": "pnpm run build",
    "installCommand": "pnpm install",
    "outputDirectory": "static",
    "nodeVersion": "20",
    "devCommand": "pnpm run dev",
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/fonts/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ],
    "caches": [
        {
            "source": "/lib/(.*)",
            "ttl": 86400
        },
        {
            "source": "/fonts/(.*)",
            "ttl": 31536000
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/edge-functions/api/:path*"
        }
    ]
}